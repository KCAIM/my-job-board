<!DOCTYPE html>
<html>
<head>
  <title><%= job.title %> - Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css"> <!-- Correct path -->
</head>
<body> <!-- Removed bg-light class -->
  <div class="container mt-5">

    <!-- Display Flash/Session Messages -->
    <% if (locals.success_msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (locals.error_msg) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= locals.error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <!-- End Messages -->

    <!-- Added form-card class -->
    <div class="card p-4 shadow-sm form-card">
      <!-- Added main-title class -->
      <h1 class="main-title"><%= job.title %></h1>
      <!-- Adjusted text color for subtitle -->
      <h5 class="mb-3" style="color: var(--theme-light-grey); opacity: 0.9;"><%= job.company %> â€” <%= job.location %></h5>

      <!-- Ensure paragraph text is light -->
      <p><strong>Salary:</strong> <%= job.salary || "Not specified" %></p>
      <!-- Use pre-wrap to preserve formatting in requirements -->
      <p><strong>Requirements:</strong></p>
      <p style="white-space: pre-wrap;"><%= job.requirements || "Not listed" %></p>

      <!-- Use Bootstrap margin class instead of inline style -->
      <div class="mt-4 d-flex justify-content-between">
        <a href="/" class="btn btn-secondary">Back to Listings</a>
        <!-- Apply Now button should likely be primary -->
        <a href="/jobs/<%= job.id %>/apply" class="btn btn-primary">Apply Now</a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle (Needed for Alert dismissal) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
