<!DOCTYPE html>
<html>
<head>
  <title>Sign Up</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="d-flex justify-content-center align-items-center vh-100"> <!-- Removed bg-light -->

  <div class="card p-4 shadow-sm form-card" style="width: 100%; max-width: 400px;"> <!-- Added form-card -->

    <!-- Display Flash/Session Messages -->
    <% if (locals.success_msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (locals.error_msg) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= locals.error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <!-- End Messages -->

    <h2 class="text-center mb-4 main-title">Create an Account</h2> <!-- Added main-title -->
    <form action="/signup" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
        <!-- Added Show Password Checkbox -->
        <div class="form-check mt-2">
          <input class="form-check-input" type="checkbox" id="showPassword">
          <label class="form-check-label" for="showPassword">Show Password</label>
        </div>
        <!-- End Show Password Checkbox -->
      </div>

      <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    </form>
    <p class="text-center mt-3">Already have an account? <a href="/login">Log in</a></p>
  </div>

  <!-- Added Show Password Script -->
  <script>
    const showPasswordCheckbox = document.getElementById('showPassword');
    const passwordInput = document.getElementById('password');

    if (showPasswordCheckbox && passwordInput) { // Check if elements exist
        showPasswordCheckbox.addEventListener('change', function () {
          passwordInput.type = this.checked ? 'text' : 'password';
        });
    }
  </script>
  <!-- End Show Password Script -->

  <!-- Bootstrap JS Bundle (Needed for Alert dismissal) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
