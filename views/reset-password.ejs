<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="d-flex justify-content-center align-items-center vh-100"> <!-- Removed bg-light -->
  <div class="card p-4 shadow-sm form-card" style="width: 100%; max-width: 400px;"> <!-- Added form-card -->

    <!-- Display Flash/Session Messages -->
    <% if (locals.success_msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (locals.error_msg) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= locals.error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <!-- End Messages -->

    <h2 class="text-center mb-4 main-title">Reset Password</h2> <!-- Added main-title -->
    <form action="/reset-password" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Enter your email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
    </form>
  </div>

  <!-- Bootstrap JS Bundle (Needed for Alert dismissal) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
